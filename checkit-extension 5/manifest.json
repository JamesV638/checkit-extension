{
  "manifest_version": 3,
  "name": "CheckIt",
  "version": "1.0.0",
  "description": "Investigate political claims instantly. Highlight any claim to get sources, context, and verification.",
  "permissions": [
    "contextMenus",
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "CheckIt Settings"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "web_accessible_resources": [{
    "resources": ["panel.html", "panel.css", "panel.js"],
    "matches": ["<all_urls>"]
  }]
}
